<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.TestFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="测试界面" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/viewDetailButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="openDetailActivity"
            android:text="View Detail" />

        <Button
            android:id="@+id/viewCreateShareButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="openCreateShareActivity"
            android:text="View Create Share" />

    </LinearLayout>


</FrameLayout>