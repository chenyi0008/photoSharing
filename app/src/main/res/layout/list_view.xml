<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="414dp"
        android:layout_height="378dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/iv_collect"
            android:layout_width="40dp"
            android:layout_height="38dp"
            android:layout_alignBottom="@id/iv_image"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="298dp"
            android:layout_marginBottom="-40dp"
            android:background="#FFFFFF"
            android:clickable="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_uncollect_foreground" />

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="284dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginTop="54dp"
            android:layout_marginBottom="41dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_content"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="412dp"
            android:layout_height="51dp"
            android:layout_alignTop="@id/iv_image"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-416dp"
            android:layout_marginTop="-36dp"
            android:layout_marginEnd="3dp"
            android:layout_toEndOf="@id/iv_image"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_likenum"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_image"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-122dp"
            android:layout_marginTop="292dp"
            android:layout_marginEnd="71dp"
            android:layout_toEndOf="@id/iv_image"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_collectnum"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_image"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-298dp"
            android:layout_marginTop="294dp"
            android:layout_marginEnd="247dp"
            android:layout_toEndOf="@id/iv_image"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_subtitle"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_content"
            android:layout_alignBottom="@id/iv_image"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/secondary_text_dark"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="40dp"
            android:layout_height="38dp"
            android:layout_alignBottom="@id/iv_image"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="121dp"
            android:layout_marginBottom="-40dp"
            android:clickable="true"
            android:scaleType="centerCrop"

            app:srcCompat="@drawable/ic_unlike_foreground" />

        <View
            android:id="@+id/v_divider"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@color/white" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>