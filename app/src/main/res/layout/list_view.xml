<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bt_focus"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/shareitem"
        android:layout_width="411dp"
        android:layout_height="502dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/iv_collect"
            android:layout_width="40dp"
            android:layout_height="38dp"
            android:layout_alignBottom="@id/iv_image"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="298dp"
            android:layout_marginBottom="-40dp"
            android:background="#FFFFFF"
            android:clickable="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_uncollect_foreground" />

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="342dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginTop="124dp"
            android:layout_marginBottom="36dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_content"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="409dp"
            android:layout_height="41dp"
            android:layout_alignTop="@id/iv_image"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-410dp"
            android:layout_marginTop="-42dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@id/iv_image"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="265dp"
            android:layout_height="38dp"
            android:layout_alignTop="@id/iv_image"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-410dp"
            android:layout_marginTop="-81dp"
            android:layout_marginEnd="144dp"
            android:layout_toEndOf="@id/iv_image"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="95dp"
            android:layout_height="34dp"
            android:layout_alignTop="@id/iv_image"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-368dp"
            android:layout_marginTop="-120dp"
            android:layout_marginEnd="273dp"
            android:layout_toEndOf="@id/iv_image"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_likenum"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_image"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-119dp"
            android:layout_marginTop="350dp"
            android:layout_marginEnd="68dp"
            android:layout_toEndOf="@id/iv_image"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_collectnum"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_image"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-296dp"
            android:layout_marginTop="348dp"
            android:layout_marginEnd="245dp"
            android:layout_toEndOf="@id/iv_image"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_subtitle"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_content"
            android:layout_alignBottom="@id/iv_image"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/secondary_text_dark"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="40dp"
            android:layout_height="38dp"
            android:layout_alignBottom="@id/iv_image"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="121dp"
            android:layout_marginBottom="-40dp"
            android:clickable="true"
            android:scaleType="centerCrop"

            app:srcCompat="@drawable/ic_unlike_foreground" />

        <View
            android:id="@+id/v_divider"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="45dp"
            android:layout_height="42dp"
            android:contentDescription=""
            tools:src="@tools:sample/avatars" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>